extends layout

block content
  a.mb-4.btn.btn-secondary(href='/') Back

  h1=title

  form(method='POST' action='/new')
    div.form-group
      label(for='text') Text:
      input#text.form-control.mb-3(type='text' placeholder='enter message' name='text' required='true' value=(undefined===message ? '' : message.trxt) )
      label(for='user') User:
      input#user.form-control(type='text' placeholder='enter user' name='user' required='true' value=(undefined===message ? '' : message.user))
    //- div.form-group
      label(for='added') Added:
      input#added.form-control(type='date' name='added' value=(undefined===message ? '' : message.added) )
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg 

  